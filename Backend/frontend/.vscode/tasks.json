{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ Server",
            "type": "shell",
            "command": "cd backend && make",
            "windows": {
                "command": "cd backend && g++ -std=c++17 -Wall -Wextra -O2 -pthread main.cpp Graph.cpp User.cpp HTTPParser.cpp JSONParser.cpp -o server.exe -lws2_32"
            },
            "linux": {
                "command": "cd backend && make"
            },
            "osx": {
                "command": "cd backend && make"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cd backend && make clean",
            "windows": {
                "command": "cd backend && del /Q *.o server.exe"
            }
        }
    ]
}
